<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SemCycle.DisciplineNotes">
    <ContentPage.Content>
        <Grid Padding="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Entry Placeholder="Название" Grid.Row="0" HorizontalTextAlignment="Center" x:Name ="name"/>
            <Entry Placeholder="Кол-во лабораторных (всего)" Grid.Row="1" HorizontalTextAlignment="Center" x:Name ="all"/>
            <Entry Placeholder="Кол-во лабораторных (сдано)" Grid.Row="2" HorizontalTextAlignment="Center" x:Name ="done"/>
            <Entry Placeholder="Дополнительная информация" Grid.Row="3" HorizontalTextAlignment="Center" x:Name ="addit"/>
            <Button Text="Добавить" Grid.Row="6"  Clicked="OnButtonClicked"/>
           
        </Grid>
    </ContentPage.Content>
</ContentPage>